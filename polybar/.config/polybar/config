[colors]
background = ${xrdb:color8:#033a54}
foreground = ${xrdb:color15:#fff0d8}
active = #cb8564
inactive = #8c5b45
highlight = ${xrdb:color2:#A55E54}
error = ${xrdb:color9:#ff523e}

[bar/wpgtk]
monitor = ${env:MONITOR:DisplayPort-1}
width = 100%
height = 24
offset-y = 0%
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 0
label-line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = menlo:fontformat=truetype:size=8;1
font-1 = FontAwesome:style=Regular:size=10;2

modules-left = i3 xwindow
modules-center = date
modules-right = filesystem

tray-position = none
tray-padding = 10
tray-background = ${colors.inactive}

[module/xwindow]
type = internal/xwindow
format-background = ${colors.active}
format-padding = 1
label = %title:0:25: ...%

[module/i3]
type = internal/i3
format = <label-mode><label-state>
index-sort = true
wrapping-scroll = false
fuzzy-matching = true

; Only show workspaces on the same output as the bar
pin-workspaces = true

ws-icon-0 = 1
ws-icon-1 = 2
ws-icon-2 = 9
ws-icon-3 = 10
ws-icon-default = ï€‰

label-mode-padding = 1
label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.highlight}

label-focused-background = ${colors.active}
label-focused-padding = 1

label-unfocused-padding = 1
label-unfocused-background = ${colors.inactive}

label-visible-background = ${colors.highlight}
label-visible-padding = 1

label-urgent-background = ${colors.highlight}
label-urgent-padding = 1

[module/date]
type = internal/date
interval = 5

date = "%Y-%m-%d    |   "
time = %H:%M:%S 

format-padding = 1
format-background = ${colors.background}

label = %date%%time%

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 0

